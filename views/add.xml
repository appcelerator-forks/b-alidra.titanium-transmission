<Alloy>
	<Window id="add" navBarHidden="true">
		<View class="toolbar">
			<View id="toolbar_title_holder">
				<Label id="toolbar_title" />
			</View>
		</View>
		<View id="content">
			<TableView>
				<TableViewRow>
					<View class="label_holder">
						<Label class="form_label" id="add_torrent_description" />
					</View>
					<TextField id="url" value="" hintText="http://...torrent" />
				</TableViewRow>	
				<TableViewRow>
					<View class="label_holder">
						<Label class="form_label" id="add_torrent_destination" />
					</View>
					<TextField id="destination" />
				</TableViewRow>
				<TableViewRow>
					<View class="label_holder">
						<Label class="form_label" id="add_torrent_auto_start" />
					</View>
					<Switch id="auto_start" value="false" />
				</TableViewRow>
				<TableViewRow></TableViewRow>
			</TableView>
		</View>
		<View id="cancel_button">
			<Label id="cancel_button_label" class="fa-icon" icon="fa-times"/>
		</View>
		<View id="add_button">
			<Label id="add_button_label" class="fa-icon" icon="fa-check"/>
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome" />
	</Window>
</Alloy>